<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_feed"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="0.4"
        android:layout_margin="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name_feed"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="0.4"
        android:fontFamily="@font/montserrat"
        android:shadowColor="#81000000"

        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/released_feed"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:layout_weight="0.15"
        android:drawableLeft="@drawable/baseline_edit_calendar_24"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="TextView"

        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/date_purchased_feed"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:layout_weight="0.15"
        android:drawableLeft="@drawable/baseline_edit_calendar_24"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/description_feed"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:layout_margin="10dp"
        android:layout_weight="0.3"
        android:drawableLeft="@drawable/baseline_edit_24"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp" />
</LinearLayout>